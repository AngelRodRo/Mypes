<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:id="@+id/alvaro">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_image"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgVFondo"
            android:layout_weight="3.13" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_gravity="left"/>



        <TextView
            android:padding="25dp"
            android:background="#35cacaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicado a 2 cuadras de la Plaza de Armas, el Gran Hotel Tacna tiene 62 años recibiendo a las más grandes personalidades que han visitado nuestra Ciudad Heroica, sobresaliendo orgullosamente como la mejor opción para visitantes de negocios y ocio."
            android:id="@+id/txtDescription"

            android:layout_margin="20dp"
            android:layout_marginTop="10dp" />


        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Galeria"
            android:id="@+id/btnGalery"
            android:layout_gravity="right"
            android:onClick="accionGaleria"/>

        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp"
           android:gravity="right">
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="70dp"
               android:inputType="textMultiLine"
               android:layout_marginRight="10dp"
               android:ems="10"
               android:id="@+id/editText" />

           <Button
               android:layout_width="130dp"
               android:layout_height="70dp"
               android:textColor="#FFFFFF"
               android:textStyle="bold"
               android:text="Comenta"
               android:id="@+id/button4"
               android:background="#ff5a96ff"
               />
           </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="148dp"
            android:layout_weight="0.47">

        </ListView>

    </LinearLayout>



</LinearLayout>

</ScrollView>
